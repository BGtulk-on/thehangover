<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/
    
    # Allow existing files to be served specifically
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Route everything else to index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>
